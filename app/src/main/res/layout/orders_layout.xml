<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/purple_500"
        android:padding="15dp">

        <TextView
            android:id="@+id/user_name_orders_layout"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginLeft="6dp"
            android:text="User Name"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/phone_number_orders_layout"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="6dp"
            android:layout_marginLeft="6dp"
            android:text="Phone Number"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/total_price_orders_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number_orders_layout"
            android:layout_margin="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Total Price"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_city_orders_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_price_orders_layout"
            android:layout_margin="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Address, City"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_time_orders_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_city_orders_layout"
            android:layout_margin="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Date Time"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/show_all_products_orders_layout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_time_orders_layout"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="Show this Order in Detail"
            android:background="@drawable/buttons"
            app:backgroundTint="@color/black" />


    </RelativeLayout>

</RelativeLayout>