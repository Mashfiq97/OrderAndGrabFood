<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".AdminUsersProductActivity">



    <RelativeLayout
        android:id="@+id/admin_users_product_relative_layout"
        android:layout_width="match_parent"
        android:background="@color/cardview_dark_background"
        android:layout_height="60dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Items"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_users_product_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="800dp"

        android:layout_below="@id/admin_users_product_relative_layout">


    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>