<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700"
        android:padding="15dp">

        <TextView
            android:id="@+id/food_name_cart_items_layout"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginLeft="6dp"
            android:text="Food Item Name"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/food_quantity_cart_items_layout"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="6dp"
            android:layout_marginLeft="6dp"
            android:text="Food Item Quantity"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/food_price_cart_items_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginLeft="6dp"
            android:text="Food Item Price"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/food_name_cart_items_layout"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>